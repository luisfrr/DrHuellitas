@using DrHuellitas.BO;
@model PropagandaBO
@{
    ViewBag.Title = "propaganda1admin";
    Layout = "~/Views/Shared/BackEndView.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <div class="tbl-cell">
            <h3>Gestión Ciudades</h3>
            <ol class="breadcrumb breadcrumb-simple">
                <li><a href="~/Admin/Index">Inicio</a></li>
                <li><a href="#">Gestiones</a></li>
                <li class="active">Ciudades</li>
            </ol>
        </div>

        <a href="#" class="btn btn-info" onclick="AgregarNuevaCiudad(0)">Añadir nueva ciudad</a> <br /><br />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripcion</th>
                    <th>Foto</th>
                    <th>usuaruio</th>
                    <th>Aprovar</th>
                </tr>
            </thead>
            <tbody id="ListaPropaganda">
                <tr id="CargarTabla1" style="color:black"></tr>
            </tbody>
        </table>
    </div>
</div>
<script>

    $.get("/Gestiones/Propaganda", null, DataBind);
    function DataBind(propaganadmin) {
        var SetData = $("#ListaPropaganda");
        for (var i = 0; i < propaganadmin.length; i++) {
            var Data = "<tr class='row_" + propaganadmin[i].id + "'>" +
                "<td>" + propaganadmin[i].id + "</td>" +
                "<td>" + propaganadmin[i].descripcion+ "</td>" +
                "<td>" + "<img src='" + propaganadmin[i].foto + "' width='64' height='64' class='img-thumbnail img-circle'/> " + "</td>" +
                "<td>" + propaganadmin[i].usuario + "</td>" +
                "<td>" + "<a href='#' class='btn btn-warning' onclick='EditarCiudad(" + PackCiudades[i].ciudad.id + ")' ><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                "</tr>";
            SetData.append(Data);
            $("#LoadingStatus").html("");

        }
    }
</script>

