<script>
    document.getElementById("slider").style.height = "200px"
    $("#slider").attr("data-pagination", "");
    $("#slider").attr("data-arrows", "");
    $("#slider").attr("data-style", "");
    $("#slider").css("position", "relative");
    $("#slider").css("z - index", "0");



    $(document).ready(function () {
        $(function () {
            $('#carga').change(function (e) {
                addImage(e);
            });

            function addImage(e) {
                var file = e.target.files[0], imageType = /image.*/;

                if (!file.type.match(imageType))
                    return;

                var reader = new FileReader();
                reader.onload = fileOnload;
                reader.readAsDataURL(file);
            }

            function fileOnload(e) {
                var result = e.target.result;
                $('#img').attr("src", result);
            }
        });
    });

    $(function () {
        $('.panel-google-plus > .panel-footer > .input-placeholder, .panel-google-plus > .panel-google-plus-comment > .panel-google-plus-textarea > button[type="reset"]').on('click', function (event) {
            var $panel = $(this).closest('.panel-google-plus');
            $comment = $panel.find('.panel-google-plus-comment');

            $comment.find('.btn:first-child').addClass('disabled');
            $comment.find('textarea').val('');

            $panel.toggleClass('panel-google-plus-show-comment');

            if ($panel.hasClass('panel-google-plus-show-comment')) {
                $comment.find('textarea').focus();
            }
        });
        $('.panel-google-plus-comment > .panel-google-plus-textarea > textarea').on('keyup', function (event) {
            var $comment = $(this).closest('.panel-google-plus-comment');

            $comment.find('button[type="submit"]').addClass('disabled');
            if ($(this).val().length >= 1) {
                $comment.find('button[type="submit"]').removeClass('disabled');
            }
        });
    });

    document.getElementById("slider").style.height = "200px"

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

    function AgregarPropaganda(idpropaganda) {
        $("#idUsuario").val(0);
        $("#imgSalida").attr("src", "../../img/admin/avatar-1-128.png");
        $("#ModalTitle1").html("Añadir nueva propaganda");
        $("#propaganda").modal();
    }

    $.get("/Comercio/Obtenerpropaganda", null, DataBind);
    function DataBind(Packpropaganda)
    {
        var SetData = $("#listaPropaganda");
        for (var i = 0; i < Packpropaganda.length; i++)
        {
            var data = "<div class='[ panel panel-default ] panel-google-plus'  row_" + Packpropaganda[i].id + ">" +

                "<div class='panel-google-plus-tags'>" +

                "</div>" +
                "<div class='panel-heading'>" +
                " <img class='[ img-circle pull-left ]' src=@Session["foto"] height='30' width='40' alt='Mouse0270' />" +
                "<h3>@Session["nombre"]</h3>" +
                "<h5><span>Propaganda</span> - <span>" + Packpropaganda[i].fecha + "</span> </h5>" +
                "</div>" +
                "<div class='panel-body'>" +
                "<p>" + Packpropaganda[i].descripcion + "</p>" +
                "<p style='text-align:center;'><img src=" + Packpropaganda[i].foto + " style='width:auto; height:500px'/></p>" +
                "</div>" +
                "<div class='panel-footer'>"+
                    "<button type='button' class='[ btn btn-default ]' onclick='EditarPropaganda("+Packpropaganda[i].id+")'>Editar</button>"+
                    "<button type='button' class='[ btn btn-default ]'>"+
                     "<span class=[ glyphicon glyphicon-share-alt ]> Eliminar</span>"+
                    "</button>"+

                "</div>"+
                "</div>";
            SetData.append(data);
        };

    }
    function EditarPropaganda(idCiudad) {
        $.get("/Comercio/ObtenerCiudad?idCiudad=" + idCiudad, null, llamada);
        function llamada(PackCiudades) {

            for (var i = 0; i < PackCiudades.length; i++) {

                $("#idCiudad").val(PackCiudades[i].ciudad.id);
                $("#nomCiudad").val(PackCiudades[i].ciudad.nombre);
                $("#DropDwn option:selected").text(PackCiudades[i].ciudad.nomEstado);
                $("#DropDwn option:selected").val(PackCiudades[i].ciudad.idEstado);
            }
        }
        $("#ModalTitle1").html("Actualizar datos de la ciudad");
        $("#MyModal1").modal();

    }
</script>
