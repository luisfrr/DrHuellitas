@using DrHuellitas.BO;
@model RegistrosBO
@{
    ViewBag.Title = "Continuar";
    Layout = "~/Views/Shared/DoctorVeterinarioView.cshtml";
}



@Styles.Render("~/Content/Cliente/Step.css")



<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Continuar registro</h1>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<div class="stepwizard col-md-offset-3">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p>Mis datos</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p>Horario de trabajo</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
            <p>Finalizar</p>
        </div>
    </div>
</div>


@using (Html.BeginForm("actualizardatos", "Comercio", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="row setup-content" id="step-1">
        <div class="col-md-8 col-md-offset-2 col-xs-12 ">
            <div class="col-md-12">
                <h3>Mis datos</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            
                            @Html.TextBoxFor(x => x.usuario.nombre, new { @placeholder = "Nombre(s)", @maxlength = "100", @required = "required", @type = "text", @class = "form-control" })
                            @Html.TextBoxFor(x => x.usuario.email, new { @placeholder = "E-mail", @maxlength = "100", @required = "required", @type = "text", @class = "form-control" })
                            @Html.TextBoxFor(x => x.usuario.telefono, new { @placeholder = "Teléfono", @maxlength = "100", @required = "required", @type = "text", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">

                            @Html.TextBoxFor(x => x.usuario.apellidos, new { @placeholder = "Apellidos(s)", @maxlength = "100", @required = "required", @type = "text", @class = "form-control" })

                            @Html.TextBoxFor(x => x.usuario.fechanacimiento, new { @required = "required", @type = "date", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Siguiente</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-2">
        <div class="col-md-8 col-md-offset-2 col-xs-12">
            <div class="col-md-12">
                <h3>Horarios laborales</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Lunes</label>
                            @Html.TextBoxFor(x => x.horario.inicioLunes, new { @placeholder = "Hora inicio", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Martes</label>
                            @Html.TextBoxFor(x => x.horario.inicioMarte, new { @placeholder = "Hora inicio", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Miercoles</label>
                            @Html.TextBoxFor(x => x.horario.inicioMiercoles, new { @placeholder = "Hora inicio", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Jueves</label>
                            @Html.TextBoxFor(x => x.horario.inicioJueves, new { @placeholder = "Hora inicio", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Viernes</label>
                            @Html.TextBoxFor(x => x.horario.inicioViernes, new { @placeholder = "Hora inicio", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Sabado</label>
                            @Html.TextBoxFor(x => x.horario.inicioSabado, new { @placeholder = "Hora inicio", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Domingo</label>
                            @Html.TextBoxFor(x => x.horario.inicioDomingo, new { @placeholder = "Hora inicio", @maxlength = "100", @type = "time", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          
                            <label class="control-label">Lunes</label>
                            @Html.TextBoxFor(x => x.horario.finalLunes, new { @placeholder = "Hora fin", @maxlength = "10", @type = "time", @class = "form-control" })
                            <label class="control-label">Martes</label>
                            @Html.TextBoxFor(x => x.horario.finalMartes, new { @placeholder = "Hora fin", @maxlength = "10", @type = "time", @class = "form-control" })
                            <label class="control-label">Miercoles</label>
                            @Html.TextBoxFor(x => x.horario.finalMiercoles, new { @placeholder = "Hora fin", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Jueves</label>
                            @Html.TextBoxFor(x => x.horario.finalJueves, new { @placeholder = "Hora fin", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Viernes</label>
                            @Html.TextBoxFor(x => x.horario.finalViernes, new { @placeholder = "Hora fin", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Sabado</label>
                            @Html.TextBoxFor(x => x.horario.finalSabado, new { @placeholder = "Hora fin", @maxlength = "100", @type = "time", @class = "form-control" })
                            <label class="control-label">Domingo</label>
                            @Html.TextBoxFor(x => x.horario.finalDomingo, new { @placeholder = "Hora fin", @maxlength = "100", @type = "time", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Siguiente</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-6 col-md-offset-3">
            <div class="col-md-12">
                <h3>Finalizar</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">

                            <img id="imgSalida" src="~/img/admin/avatar-2-256.png" width="256" height="256" class="img-thumbnail img-circle" />
                            <br /><br />
                            <label class="control-label" for="file">Seleccionar una foto de perfil:</label>
                            @Html.TextBoxFor(x => x.usuario.img, new { @type = "file", @name = "file", @id = "file" })
                            

                        </div>
                    </div>
                </div>
                <br />
                <br />
                <button class="btn btn-success btn-lg pull-right" type="submit" id="btnListo">Listo</button>
            </div>
        </div>
    </div>
}

<br />
<br />
<script>
    document.getElementById("slider").style.height = "200px"
    document.getElementById("step-1").style.marginRight = "0px";
    document.getElementById("step-2").style.marginRight = "0px";
    document.getElementById("step-3").style.marginRight = "0px";
    document.getElementById("body").style.marginTop = "0px";


    $(document).ready(function () {
        $(function () {
            $('#file').change(function (e) {
                addImage(e);
            });

            function addImage(e) {
                var file = e.target.files[0], imageType = /image.*/;

                if (!file.type.match(imageType))
                    return;

                var reader = new FileReader();
                reader.onload = fileOnload;
                reader.readAsDataURL(file);
            }

            function fileOnload(e) {
                var result = e.target.result;
                $('#imgSalida').attr("src", result);
            }
        });
    });


</script>

