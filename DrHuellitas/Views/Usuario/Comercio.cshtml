@using DrHuellitas.BO;
@model PuntosdeUbicacionBO
@{
    ViewBag.Title = "Comercio";
    Layout = "~/Views/Shared/MasterFrontEnd.cshtml";
}

<script src="http://code.jquery.com/jquery-3.2.1.js"></script>
<link href="~/Content/jquery.gmaps.css" rel="stylesheet" />
<script src="~/Scripts/jquery.gmaps.js"></script>


<style>
    .gmaps {
        height: 500px;
        width: 100%;
    }
</style>
<div class="main" role="main">
    <div id="content" class="content full">
        <div class="container">
            <div class="row">
                <div class="col-md-12 img-thumbnail">
                    <div data-key="AIzaSyAV5-gt021-D6FvPpRaFo_o-01qgBoSQtU"
                         data-control-zoom="true"
                         data-control-type="true"
                         data-control-scale="true"
                         data-control-streetview="true"
                         data-control-rotate="true"
                         data-event-mousewheel="true"
                         data-zoom="100" role="map" class="gmaps" style="width:100%;" id="repetir">

                        
                        <!-- items de ubicaciones -->

                    </div>
            </div>
               
        </div>
    </div>
</div>
 </div>

<script>
    //escrip para las imagenes
     document.getElementById("slider").style.height = "200px"
    $("#slider").attr("data-pagination", "");
    $("#slider").attr("data-arrows", "");
    $("#slider").attr("data-style", "");


    $.get("/Usuario/obtenerpuntos", null, DataBind);
    function DataBind(puntos) {
        var cargar= $("#repetir");
        for (var i = 0; i < puntos.length; i++) {
            var p = "<div data-id=" + puntos[i].direccion.id + "" +
                "data-lat='" + puntos[i].direccion.latitud + "'" +
                "data-lng='" + puntos[i].direccion.longitud + "'" +
                "class='marker'>" +
                "<div class='map-card'>" +
                "<h1>" + puntos[i].direccion.ubicacion + "</h1>" +
                "<img src=" + puntos[i].usuarios.foto + " style='width:52px; height:52px;' class='img-circle' />" +
                "<p>Veterinaria:" + puntos[i].comercio.nombreComercial + "</p>" +
                "<p>Nombre fiscal: " + puntos[i].comercio.nombreFiscal + "</p>" +
                "<p>Representante:" + puntos[i].usuarios.nombre + "</p>" +
                "<p>E-mail:" + puntos[i].comercio.email + "</p>" +
                "<p>Telefono:" + puntos[i].comercio.telefono1 + "</p>" +
                "</div>" +
                "</div";
            cargar.append(p);
        };

    }

    $(document).ready(function () {
        $('.gmaps').gmaps();
    });



    

</script>

